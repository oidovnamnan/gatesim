// GateSIM Database Schema
// eSIM Management Platform

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// ============ AUTHENTICATION ============

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  emailVerified DateTime?
  name          String?
  image         String?
  phone         String?
  
  // Relations
  accounts      Account[]
  sessions      Session[]
  orders        Order[]
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ============ PACKAGES (Cached from Airalo) ============

model Package {
  id              String   @id @default(cuid())
  airaloPackageId String   @unique
  slug            String
  type            String   // "sim" | "topup"
  
  // Pricing (in USD)
  netPrice        Decimal  @db.Decimal(10, 2)
  retailPrice     Decimal  @db.Decimal(10, 2)
  ourPrice        Decimal  @db.Decimal(10, 2)
  currency        String   @default("USD")
  
  // Package details
  title           String
  data            String
  dataAmount      Int      // MB
  validityDays    Int
  isUnlimited     Boolean  @default(false)
  
  // Operator info
  operatorTitle   String
  isRoaming       Boolean  @default(true)
  operatorInfo    String[]
  
  // Coverage
  countries       String[]
  countryName     String?
  regionSlug      String?
  
  // Metadata
  planType        String   @default("data")
  activationPolicy String  @default("first-usage")
  shortInfo       String?
  imageUrl        String?
  
  // Flags
  isFeatured      Boolean  @default(false)
  isPopular       Boolean  @default(false)
  isActive        Boolean  @default(true)
  
  // Cache control
  lastSyncedAt    DateTime @default(now())
  
  // Relations
  orders          Order[]
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  @@index([slug])
  @@index([countries])
  @@index([isActive])
  @@index([isFeatured])
}

// ============ COUNTRIES ============

model Country {
  id          String   @id @default(cuid())
  code        String   @unique // ISO 3166-1 alpha-2 (e.g., "MN", "JP")
  name        String
  nameLocal   String?  // Local name (e.g., "Монгол")
  flag        String   // Emoji flag
  continent   String?
  packageCount Int     @default(0)
  
  isPopular   Boolean  @default(false)
  isActive    Boolean  @default(true)
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([isPopular])
}

// ============ ORDERS ============

model Order {
  id              String      @id @default(cuid())
  orderNumber     String      @unique
  
  // User
  userId          String
  user            User        @relation(fields: [userId], references: [id])
  userEmail       String
  
  // Package
  packageId       String
  package         Package     @relation(fields: [packageId], references: [id])
  packageSnapshot Json
  
  // Pricing
  amount          Decimal     @db.Decimal(10, 2)
  currency        String      @default("USD")
  
  // Status
  status          OrderStatus @default(PENDING_PAYMENT)
  
  // Payment
  paymentMethod   PaymentMethod?
  paymentId       String?
  paidAt          DateTime?
  
  // eSIM Data (from Airalo)
  airaloOrderId   String?
  iccid           String?
  lpaString       String?     @db.Text
  qrCodeUrl       String?
  qrCodeData      String?     @db.Text
  simShareUrl     String?
  
  // Delivery
  deliveryMethod  DeliveryMethod @default(QR_CODE)
  emailSentAt     DateTime?
  
  // Metadata
  notes           String?
  metadata        Json?
  
  // Payments relation
  payments        Payment[]
  
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
  
  @@index([userId])
  @@index([status])
  @@index([orderNumber])
  @@index([createdAt])
}

enum OrderStatus {
  PENDING_PAYMENT
  PAYMENT_PROCESSING
  PAYMENT_FAILED
  PAID
  PROVISIONING
  PROVISIONING_FAILED
  COMPLETED
  REFUNDED
  CANCELLED
}

enum PaymentMethod {
  QPAY
  STRIPE
  SOCIALPAY
}

enum DeliveryMethod {
  QR_CODE
  EMAIL
  BOTH
}

// ============ PAYMENTS ============

model Payment {
  id                    String        @id @default(cuid())
  orderId               String
  order                 Order         @relation(fields: [orderId], references: [id])
  
  provider              PaymentMethod
  providerPaymentId     String?
  
  amount                Decimal       @db.Decimal(10, 2)
  currency              String
  
  status                PaymentStatus @default(PENDING)
  
  // QPay specific
  qpayInvoiceId         String?
  qpayQrText            String?       @db.Text
  qpayQrImage           String?       @db.Text
  qpayDeeplinks         Json?
  
  // Stripe specific
  stripeSessionId       String?
  stripePaymentIntentId String?
  
  expiresAt             DateTime?
  completedAt           DateTime?
  
  webhookPayload        Json?
  
  createdAt             DateTime      @default(now())
  updatedAt             DateTime      @updatedAt
  
  @@index([orderId])
  @@index([provider])
  @@index([status])
}

enum PaymentStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
  EXPIRED
  REFUNDED
}

// ============ ADMIN ============

model AdminUser {
  id            String    @id @default(cuid())
  email         String    @unique
  passwordHash  String
  name          String
  role          AdminRole @default(STAFF)
  isActive      Boolean   @default(true)
  
  lastLoginAt   DateTime?
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

enum AdminRole {
  SUPER_ADMIN
  ADMIN
  STAFF
}

// ============ SETTINGS ============

model Setting {
  id        String   @id @default(cuid())
  key       String   @unique
  value     Json
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// ============ AUDIT LOG ============

model AuditLog {
  id         String   @id @default(cuid())
  action     String
  entityType String
  entityId   String
  userId     String?
  adminId    String?
  oldData    Json?
  newData    Json?
  ipAddress  String?
  userAgent  String?
  
  createdAt  DateTime @default(now())
  
  @@index([entityType, entityId])
  @@index([createdAt])
}
